<%= form_with model: survey, local: true do |form| %>
  <% if survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
        <% survey.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>


  <%= form.fields_for :survey_question do |question_form| %>
    <%= question_form.label :content, 'Yes/No Question' %>
    <%= question_form.text_field :content %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
